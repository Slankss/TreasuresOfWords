<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.LoginAndRegister.PasswordReset.PasswordResetFragment">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/reset_password"
            android:textColor="@color/text_color"
            android:layout_marginBottom="25dp"
            android:textSize="20sp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textEmailInputLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="25dp"
            android:hint="@string/hint_email"
            android:textColorHint="@color/edit_text_box_text_color"
            app:boxBackgroundColor="@color/transparant"
            app:boxCornerRadiusBottomEnd="14dp"
            app:boxCornerRadiusBottomStart="14dp"
            app:boxCornerRadiusTopEnd="14dp"
            app:boxCornerRadiusTopStart="14dp"
            app:boxStrokeColor="#FFFFFF"
            app:boxStrokeErrorColor="#FF0000"
            app:endIconMode="clear_text"
            app:errorTextColor="#FF0000"
            app:helperText=""
            app:hintTextColor="@color/edit_text_box_text_color">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:paddingStart="20dp"
                android:textAlignment="textStart"
                android:textColor="@color/edit_text_box_text_color"
                android:textColorHighlight="#FF9800"
                tools:ignore="RtlSymmetry" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btnSenResetEmail"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/radius_button"
            android:text="@string/send_verification_message"
            android:textColor="@color/login_button_text_color"
            android:textSize="16sp"
            app:backgroundTint="@color/login_button_color" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>